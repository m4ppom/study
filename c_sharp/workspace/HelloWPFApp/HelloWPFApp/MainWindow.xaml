<Window x:Class="HelloWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="296,40,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Height="46" Width="208"><Run Text=" Select a message option and then choose the Display button"/><Run Text="."/></TextBlock>
        <RadioButton x:Name="HelloButton" Content="Hello" HorizontalAlignment="Left" Margin="277,158,0,0" VerticalAlignment="Top" Grid.Row="1" Width="115"/>
        <RadioButton x:Name="GoodbyeButton" Content="Goodbye" HorizontalAlignment="Left" Margin="466,158,0,0" VerticalAlignment="Top" Grid.Row="1" Width="103"/>
        <Button x:Name="Display" Content="Display" HorizontalAlignment="Left" Margin="386,233,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="Display_Click"/>
    </Grid>
</Window>
